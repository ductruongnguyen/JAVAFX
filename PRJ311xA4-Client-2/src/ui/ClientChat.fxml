<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="490.0" prefWidth="453.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ClientChatController">
    <center>
        <AnchorPane prefHeight="400.0" prefWidth="600.0">
            <children>
                <TextArea fx:id="txtContent" layoutX="1.0" layoutY="1.0" prefHeight="268.0" prefWidth="447.0"
                          AnchorPane.bottomAnchor="10.0" AnchorPane.topAnchor="0.0" editable="false"/>
            </children>
        </AnchorPane>
    </center>
    <top>
        <GridPane nodeOrientation="LEFT_TO_RIGHT" vgap="5.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints />
            </rowConstraints>
            <children>
                <FlowPane hgap="8.0" prefHeight="200.0" prefWidth="200.0" vgap="5.0">
                    <children>
                        <Label text="HostIP" />
                        <TextField fx:id="txtHostIP" text="localhost" />
                        <Label text="Port" />
                        <TextField fx:id="txtPort" text="3309" />
                    </children>
                </FlowPane>
                <FlowPane hgap="8.0" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1">
                    <children>
                        <Label text="Username" />
                        <TextField fx:id="txtUsername" prefHeight="26.0" prefWidth="152.0" text="Truong" onAction="#onEnterConnect"/>
                        <Button fx:id="btnConnect" mnemonicParsing="false" onAction="#btnConnectActionPerformed" text="Connect" />
                    </children>
                </FlowPane>
            </children>
        </GridPane>
    </top>
    <bottom>
        <FlowPane hgap="10.0" prefHeight="83.0" prefWidth="459.0" vgap="10.0" BorderPane.alignment="CENTER">
            <children>
                <TextField fx:id="txtMessage" prefHeight="27.0" prefWidth="393.0" onAction="#onEnter" />
                <Button fx:id="btnSend" mnemonicParsing="false" onAction="#btnSendActionPerformed" text="Send" />
            </children>
        </FlowPane>
    </bottom>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</BorderPane>
